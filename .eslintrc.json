{
  "env": {
    "browser": true,
    "es2021": true
  },

  "plugins": ["html"],
  "settings": {
    "html/html-extensions": [".html"]
  },

  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
